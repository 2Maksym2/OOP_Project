<UserControl x:Class="DealHubWPF.View.Order"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White" Width="609" Height="434">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Верхня панель -->
            <RowDefinition Height="*"/>
            <!-- Контент -->
        </Grid.RowDefinitions>

        <!-- Верхня панель -->
        <!-- Логотип + Іконки профілю -->
        <Border CornerRadius="15" BorderThickness="1" Background="#EAC4C4" Height="47"  Margin="0,0,0,10">
            <DockPanel Background="Transparent">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding RegUserCommand}" Style="{StaticResource RegButtons}" Background="Transparent" BorderThickness="0" Cursor="Hand">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Image Source="/Images/updatelogo.png" Width="69" Height="53" Margin="0,0,5,0" />
                            <TextBlock Text="DealHub" 
                                     FontSize="18" 
                                     FontWeight="Bold" 
                                     Margin="10,10,0,0" Width="103"
                                     Foreground="Black"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding ProfileCommand}" Style ="{StaticResource LogButtons}" BorderThickness="0" Background="Transparent">
                        <TextBlock Foreground="#65558F" FontFamily="Segoe MDL2 Assets" Text="&#xE77B;" FontSize="24" Margin="10"/>
                    </Button>
                    <Button Command="{Binding ChatsCommand}" Style ="{StaticResource LogButtons}" BorderThickness="0" Background="Transparent">
                        <TextBlock Foreground="#65558F"  FontFamily="Segoe MDL2 Assets" Text="&#xE8BD;" FontSize="24" Margin="10"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Основний контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Ліва частина: форма -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="10,0,0,0">
                <TextBlock Text="Контактні дані" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBlock Text="Ім’я:" Margin="0,5"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                <TextBlock Text="Прізвище:" Margin="0,5"/>
                <TextBox Text="{Binding SurName, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                <TextBlock Text="По батькові:" Margin="0,5"/>
                <TextBox Text="{Binding Patronymic, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                <TextBlock Text="Телефон:" Margin="0,5"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="+380" VerticalAlignment="Center" FontSize="14" Margin="0,0,5,0"/>
                    <TextBox Width="294" Height="25" FontSize="14"
             Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
             VerticalContentAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Адреса доставки:" Margin="0,5"/>
                <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                <Button Style="{StaticResource CategoryButtons}" Content="Купити" Width="80" Height="28" Background="#65558F" Foreground="White" Margin="0,20,0,0" Click="Button_Click"/>
            </StackPanel>

            <!-- Права частина: фото і ціна -->
            <Grid VerticalAlignment="Center" Grid.ColumnSpan="2" Height="336" Margin="351,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="219"/>
                    <RowDefinition Height="Auto" MinHeight="131.62"/>
                </Grid.RowDefinitions>

                <!-- Зображення -->
                <Image Source="{Binding Image}" Width="202" Grid.Row="0" HorizontalAlignment="Left" Margin="10,0,0,10"/>
                <TextBlock Text="{Binding Title}" 
               Grid.Row="0" 
               FontSize="14" 
               FontWeight="Bold" 
               HorizontalAlignment="Left" 
               Margin="10,200,0,0"/>

                <!-- Ціна ПІД зображенням -->
                <TextBlock Text="{Binding Price, StringFormat={}{0} грн}" 
               Grid.Row="0" 
               FontSize="14" 
               FontWeight="Bold" 
               HorizontalAlignment="Left" 
               Margin="10,220,0,0"/>

                <!-- Опис -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,235,0,15" Width="228" Grid.RowSpan="2">
                    <TextBlock TextWrapping="Wrap" Margin="5,0,0,0" Text="{Binding Description}" FontSize="12" VerticalAlignment="Bottom" Height="117" Width="217"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>