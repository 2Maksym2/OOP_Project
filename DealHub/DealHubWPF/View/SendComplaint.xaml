<Window x:Class="DealHubWPF.View.SendComplaint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DealHubWPF.View"
        mc:Ignorable="d"
       Title="Скарга" Height="129" Width="300"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Background="White">

    <Border BorderThickness="1" BorderBrush="LightGray" CornerRadius="4" Padding="10">
        <StackPanel>
            <TextBlock Text="Скарга" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="ComplaintTextBox" Text="" Foreground="Gray"
                     BorderBrush="LightGray" BorderThickness="1" Height="50"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Style="{StaticResource RegButtons}" Content="Відправити" Width="80" Margin="0,0,10,0" Click="Submit_Click"/>
                <Button Style="{StaticResource RegButtons}" Content="Скасувати" Width="80" Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>